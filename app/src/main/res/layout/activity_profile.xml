<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    tools:context=".ProfileActivity"
    android:gravity="center"
    android:id="@+id/profile_id"
    android:animateLayoutChanges="true"
    android:textAlignment="center"
    android:layout_width="fill_parent">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:gravity="center"
        android:textAlignment="center"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp"
        card_view:contentPadding="0dp">


        <!-- Main Content View -->
        <AbsoluteLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/profile_bkground"
            android:padding="30px"
            android:textAlignment="center">


            <TextView
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_x="65dp"
                android:layout_y="131dp"
                android:padding="5dp"
                android:text="Mina Khalil"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_x="47dp"
                android:layout_y="190dp"
                android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                android:padding="7dp"
                android:text="   0123456789"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="26sp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_x="0dp"
                android:layout_y="244dp"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:padding="7dp"
                android:text="   mkadly@gmail.com"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="26sp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_x="41dp"
                android:layout_y="308dp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:padding="7dp"
                android:text="   10 st - Helwan"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="26sp"
                tools:ignore="MissingConstraints"

                />
        </AbsoluteLayout>

    </android.support.v7.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="-75dp"
        android:layout_marginLeft="70dp"
        android:elevation="8dp"
        android:src="@drawable/mkadly"
        android:textAlignment="center"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="7dp"
        tools:ignore="MissingConstraints" />
</RelativeLayout>